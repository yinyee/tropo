<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <servlet>
    <servlet-name>HelloServlet</servlet-name>
    <servlet-class>com.github.yinyee.tropo.HelloServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RecordServlet</servlet-name>
    <servlet-class>com.github.yinyee.tropo.RecordServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SMSServlet</servlet-name>
    <servlet-class>com.github.yinyee.tropo.SMSServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HelloServlet</servlet-name>
    <url-pattern>/sayhello</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RecordServlet</servlet-name>
    <url-pattern>/record</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SMSServlet</servlet-name>
    <url-pattern>/sms</url-pattern>
  </servlet-mapping>
</web-app>